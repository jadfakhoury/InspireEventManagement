@model List<Event>
@{
}

<table id="EventsTable" style="width:100%">
    <thead>
        <tr>
            <th hidden></th>
            <th>Title</th>
            <th>Description</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr role="row" class="odd clickable-row event-row">
                    <td hidden>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <span>
                            <a class="bi bi-eye-fill" href="javascript:void(0)" onclick="location.href='@Url.Action("EventDetails", "Admin", new { Id = item.Id })'"></a>
                        </span>
                    </td>
                    <td>
                        <span style="color:darkred;font-size:23px;font-weight:bold;">
                            <a class="bi bi-pencil" href="javascript:void(0)" onclick="location.href='@Url.Action("EditEvent", "Admin", new { Id = item.Id })'"></a>
                        </span>
                    </td>
                    <td>
                        <span style="color:darkred;font-size:23px;font-weight:bold;">
                            <a class="bi bi-trash-fill" href="javascript:void(0)" onclick="Delete('/Admin/DeleteEvent/', @item.Id, 'Event', 'EventsTable', 'EventsListTable')"></a>
                        </span>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

